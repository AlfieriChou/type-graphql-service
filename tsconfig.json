{
  "compilerOptions": {
    "lib": [
      "es5",
      "es6",
      "es2017",
      "esnext.asynciterable"
    ],
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "rootDir": "src",
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "charset": "utf8",
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "pretty": true
  },
  "exclude": ["node_modules"],
  "include": ["./src/**/*"]
}